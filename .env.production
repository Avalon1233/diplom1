# Production Environment Configuration
# Copy this file to .env and update with your production values

# Flask Configuration
SECRET_KEY=your-super-secret-production-key-here-change-this
FLASK_ENV=production
FLASK_DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/crypto_platform
SQLALCHEMY_ENGINE_OPTIONS={"pool_pre_ping": true, "pool_recycle": 300}

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# External API Keys
BINANCE_API_KEY=your-binance-api-key
BINANCE_SECRET_KEY=your-binance-secret-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Security Configuration
WTF_CSRF_ENABLED=true
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://localhost:6379/3
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_LOGIN=5 per minute
RATELIMIT_API=1000 per hour

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/crypto_platform.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Monitoring and Error Tracking
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ENVIRONMENT=production

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads

# SSL/TLS Configuration
SSL_DISABLE=false
PREFERRED_URL_SCHEME=https

# Performance Configuration
SEND_FILE_MAX_AGE_DEFAULT=31536000

# Admin Configuration
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_USERNAME=admin

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/app/backups

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ML Model Configuration
MODEL_UPDATE_INTERVAL=3600
MODEL_TRAINING_SCHEDULE=0 3 * * 0

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_TIMEOUT=30

# Cache Configuration
CACHE_DEFAULT_TIMEOUT=300
CACHE_THRESHOLD=500

# Docker Configuration (if using Docker)
POSTGRES_PASSWORD=your-postgres-password
REDIS_PORT=6379
WEB_PORT=5000
FLOWER_PORT=5555
NGINX_PORT=80
NGINX_SSL_PORT=443
