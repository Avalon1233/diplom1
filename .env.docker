# Docker Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_USER=postgres
POSTGRES_DB=crypto_platform
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Application Security
SECRET_KEY=your_very_secure_secret_key_here_minimum_32_characters
FLASK_ENV=production

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# External API Keys
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here

# Monitoring & Logging
SENTRY_DSN=your_sentry_dsn_here_optional

# Port Configuration
HTTP_PORT=80
HTTPS_PORT=443
WEB_PORT=5000
POSTGRES_PORT=5432
REDIS_PORT=6379
FLOWER_PORT=5555
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Performance Tuning
WEB_WORKERS=4
WEB_WORKER_CLASS=gevent
CELERY_CONCURRENCY=2

# Monitoring Credentials
FLOWER_USER=admin
FLOWER_PASSWORD=secure_flower_password
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure_grafana_password

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
